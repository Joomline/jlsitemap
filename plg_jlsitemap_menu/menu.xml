<?xml version="1.0" encoding="utf-8"?>
<extension version="3.8" type="plugin" group="jlsitemap" method="upgrade">
	<name>PLG_JLSITEMAP_MENU</name>
	<author>Joomline</author>
	<creationDate>October 2018</creationDate>
	<copyright>Copyright (c) 2010 - 2018 Joomline. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>sales@joomline.ru</authorEmail>
	<authorUrl>https://joomline.ru/</authorUrl>
	<version>0.0.1</version>
	<description>PLG_JLSITEMAP_MENU_DESCRIPTION</description>
	<scriptfile>script.php</scriptfile>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_jlsitemap_menu.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_jlsitemap_menu.sys.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_jlsitemap_menu.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_jlsitemap_menu.sys.ini</language>
	</languages>
	<files>
		<filename plugin="menu">menu.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="menus" type="menu"
					   addfieldpath="/administrator/components/com_menus/models/fields"
					   label="PLG_JLSITEMAP_MENU_PARAMS_MENUS"
					   clientid="0"
					   multiple="true"/>
				<field name="changefreq" type="list" default="weekly"
					   label="PLG_JLSITEMAP_MENU_PARAMS_CHANGEFREQ">
					<option value="always">always</option>
					<option value="hourly">hourly</option>
					<option value="daily">daily</option>
					<option value="weekly">weekly</option>
					<option value="monthly">monthly</option>
					<option value="yearly">yearly</option>
					<option value="never">never</option>
				</field>
				<field name="priority" type="list"
					   default="0.5" label="PLG_JLSITEMAP_MENU_PARAMS_PRIORITY">
					<option value="0.0">0.0</option>
					<option value="0.1">0.1</option>
					<option value="0.2">0.2</option>
					<option value="0.3">0.3</option>
					<option value="0.4">0.4</option>
					<option value="0.5">0.5</option>
					<option value="0.6">0.6</option>
					<option value="0.7">0.7</option>
					<option value="0.8">0.8</option>
					<option value="0.9">0.9</option>
					<option value="1">1</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>